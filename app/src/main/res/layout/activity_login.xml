<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.LoginActivity"
        android:background="#333333">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="Sign in with"
            android:textColor="#ffffff"
            android:textSize="28sp"
            app:layout_constraintBottom_toTopOf="@+id/login_with_email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.858" />

        <Button
            android:id="@+id/login_with_email"
            android:layout_width="230dp"
            android:layout_height="90dp"
            android:text="edu email"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_medium"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/rounded_button_shape_login_email"/>

        <Button
            android:id="@+id/login_with_eclass"
            android:layout_width="230dp"
            android:layout_height="90dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_with_email"
            android:background="@drawable/rounded_button_shape_login_eclass"
            android:text="Eclass"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_medium"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>